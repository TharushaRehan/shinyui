{
  "$schema": "https://json.schemastore.org/eslintrc",
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:@next/next/recommended",
    "plugin:tailwindcss/recommended",
    "plugin:@mdx-js/esbuild"
  ],
  "rules": {
    "next": {
      "rootDir": ["app/*/"]
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
